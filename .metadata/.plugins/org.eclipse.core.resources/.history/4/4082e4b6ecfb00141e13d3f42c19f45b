import java.io.*;


public class NameList {
	
	public static void main (String [] arg) throws IOException{
		
		File Dir=new File ("F:\\Koushik'sKindleCollection\\");		
		String [] listt=Dir.list();
		int authorCounter=0; int bookCounter=0;
		File List=new File("Filelist.txt");
		List.createNewFile();
			PrintWriter pw=new PrintWriter(List);
		for(String fn : listt){
			authorCounter++;int books=0;String DirFile=null;
			File SubDir=new File ("F:\\Koushik'sKindleCollection\\"+fn);
			String [] filelist=SubDir.list();
			
			if(filelist!=null)
			for(String fn1 : filelist){
				bookCounter++;++books;
				DirFile = DirFile+fn1+",";
			}
			DirFile =authorCounter+"("+books+")"+"	"+fn +"	" ;
			pw.println(DirFile);
			System.out.println( DirFile);}
			pw.close();
			System.out.println("\n\n\nThere are  "+bookCounter+ "  books writen by " +authorCounter+ " different authors.");
		
	}
}
